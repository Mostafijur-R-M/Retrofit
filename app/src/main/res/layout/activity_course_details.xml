<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseDetailsActivity"
    >

    <!--<com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtube_player_view_id"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        />-->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <com.jaedongchicken.ytplayer.YoutubePlayerView
           android:id="@+id/youtubePlayerView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:layout_marginBottom="20dp"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="2"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/course_name"
                   android:textAlignment="textEnd"
                   android:textColor="@color/Black"
                   android:layout_weight="1"
                   android:textSize="18sp"
                   />
               <TextView
                   android:id="@+id/course_title_tv_id"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/course_title"
                   android:textAlignment="textStart"
                   android:textStyle="bold"
                   android:textSize="18sp"
                   android:layout_marginLeft="2sp"
                   android:textColor="@color/Red"
                   />
           </LinearLayout>
       </androidx.cardview.widget.CardView>

       <!--<com.google.android.material.tabs.TabLayout
           android:id="@+id/mains_tab_id"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/colorPrimary"
           app:tabTextColor="@color/White"/>

       <androidx.viewpager.widget.ViewPager
           android:id="@+id/main_tabs_view_pager_id"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>-->

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:weightSum="3"
           android:background="@color/White"
           android:layout_marginBottom="5dp"
           >
           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Videos"
               android:layout_weight="1"
               android:background="@color/Green"
               android:textColor="@color/White"/>
           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Notes"
               android:layout_weight="1"
               android:background="@color/Green"
               android:textColor="@color/White"
               android:layout_marginLeft="2dp"
               android:layout_marginRight="2dp"/>
           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Files"
               android:background="@color/Green"
               android:textColor="@color/White"
               android:layout_marginRight="2dp"
               android:layout_weight="1"/>
       </LinearLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >

           <androidx.cardview.widget.CardView
               android:id="@+id/account_cv_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="2dp"
               >

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:text="@string/text_accounts"
                   android:textColor="@color/White"
                   android:gravity="center"
                   android:textSize="20sp"
                   android:background="@color/colorPrimary"
                   />

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/chapter_recyler_view_id"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="30dp"
                   android:padding="2dp" />
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:id="@+id/phone_cv_id"
               android:layout_width="match_parent"
               android:layout_below="@+id/account_cv_id"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="2dp"
               >

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:text="@string/text_uses_smart_phone_about"
                   android:textColor="@color/White"
                   android:background="@color/colorPrimary"
                   android:gravity="center"
                   android:textSize="20sp"
                   />

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/phone_recyler_view_id"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="2dp"
                   android:layout_marginTop="30dp"
                   />
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:id="@+id/computer_cv_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/phone_cv_id"
               android:layout_gravity="center"
               android:layout_marginTop="2dp">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:text="@string/text_uses_computer_about"
                   android:gravity="center"
                   android:textColor="@color/White"
                   android:background="@color/colorPrimary"
                   android:textSize="20sp"
                   />

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/computer_recyler_view_id"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="2dp"
                   android:layout_marginTop="30dp"/>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:id="@+id/qna_cv_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_below="@+id/computer_cv_id"
               android:layout_marginTop="2dp">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:gravity="center"
                   android:text="@string/text_basic_mind_qna"
                   android:textColor="@color/White"
                   android:background="@color/colorPrimary"
                   android:textSize="20sp"
                   />

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/qna_recyler_view_id"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="2dp"
                   android:layout_marginTop="30dp"/>
           </androidx.cardview.widget.CardView>
       </RelativeLayout>

   </LinearLayout>

</ScrollView>